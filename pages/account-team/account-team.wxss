page {
  background-image: none;
  background: #fff0cd;
}

.list {
  padding: 0 20rpx;
}

.item {
  margin-top: 20rpx;
  padding: 0 20rpx;
  color: #30393c;
  background: #fef9e6;
}

.item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: block;
}

.team_content {
  padding: 10rpx 0;
  font-size: 24rpx;
  font-weight: bold;
}

.room {
  padding: 20rpx 0;
  font-size: 26rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #ece7d6;
}

.unity {
  padding-left: 10rpx;
}

.hint {
  padding: 50rpx 0;
  text-align: center;
  font-size: 32rpx;
}

.btn_box {
  display: flex;
  flex-direction: row-reverse;
}

.btn {
  width: 200rpx;
  height: 50rpx;
  color: #fff;
  background: #03c160;
  text-align: center;
  line-height: 50rpx;
  border-radius: 20rpx;
  margin: 10rpx 0;
}
